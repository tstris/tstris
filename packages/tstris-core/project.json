{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/tstris-core/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-script",
			"options": {
				"script": "build",
				"outputPath": "dist/packages/tstris-core"
			},
			"outputs": ["dist/packages/tstris-core/lib"]
		},
		"publish": {
			"executor": "@nrwl/workspace:run-commands",
			"options": {
				"command": "tsx tools/scripts/publish.mjs tstris-core {args.ver} {args.tag} {args.otp}"
			},
			"dependsOn": [
				{
					"projects": "self",
					"target": "build"
				}
			]
		},
		"dev": {
			"executor": "nx:run-script",
			"options": {
				"script": "dev"
			},
			"outputs": ["packages/tstris-core/dist"]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/tstris-core/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/packages/tstris-core"],
			"options": {
				"jestConfig": "packages/tstris-core/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": []
}
